[flake8]
filename = *.py


ignore =
    # B008 Do not perform function calls in argument defaults.
    B008,
    # D100 Missing docstring in public module
    D100,
    # D104 Missing docstring in public package
    D104,
    # D106 Missing docstring in public nested class
    D106,
    # D107 Missing docstring in __init__
    D107,
    # RST301 Unexpected indentation
    RST301,
    # WPS210 Found too many local variables: 7 > 5
    WPS210,
    # WPS211 Found too many arguments: 6 > 5
    WPS211,
    # WPS226 Found string literal over-use: ...
    WPS226,
    # WPS229 Found too long ``try`` body length: 2 > 1
    WPS229,
    # WPS305 Found `f` string
    WPS305,
    # WPS306 Found class without a base class: ...
    WPS306,
    # WPS404 Found complex default value
    WPS404,
    # WPS431 Found nested class: ...
    WPS431,
    # WPS457 Found an infinite while loop
    WPS457,
    # WPS458 Found imports collision: ...
    WPS458


per-file-ignores =
    # WPS323 Found `%` string formatting
    # WPS407 Found mutable module constant
    # WPS432 Found magic number: ...
    worker/src/core/logger.py: WPS323,
    notification_api/src/core/logger.py: WPS323, WPS407
    notification_api/src/core/config.py: WPS432
    notification_api/src/core/openapi_docs.py: WPS407
    tests/integration: WPS401
    notification_handler/src/core/logger.py: WPS323, WPS407
    notification_handler/src/core/settings.py: WPS432 WPS323
    notification_handler/src/models/notification.py: WPS110
    generator/src/core/logger.py: WPS323, WPS407
    generator/src/core/settings.py: WPS432 WPS323
    generator/src/models/notifications.py: WPS110
    worker/src/core/config.py: WPS432

exclude =
    # No need to traverse our git directory
    .git,
    .github,
    # There's no value in checking cache directories
    __pycache__,
    # There's no value in checking clickhouse directories
    clickhouse,
    # There's no value in checking nginx directories
    nginx,
    # The conf file is mostly autogenerated, ignore it
    documentation,
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist,
    tests/integration/*


max-complexity = 10


max-line-length = 120


# Указываем, какой тип кавычек должен использоваться в вашем проекте
inline-quotes = "
